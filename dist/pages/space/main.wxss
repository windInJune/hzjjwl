@import "../../common/vendor.wxss";

@charset "UTF-8";
.container {
  overflow-x: hidden;
}
.container .wx-switch-input {
  width: 80rpx !important;
  height: 40rpx !important;
}
.container .wx-switch-input::before {
  width: 80rpx !important;
  height: 40rpx !important;
}
.container .wx-switch-input::after {
  width: 36rpx !important;
  height: 36rpx !important;
}
.container .topBox {
  background: url("https://image-1257827636.cos.ap-shanghai.myqcloud.com/bannerbg20181022134434.png") no-repeat;
  background-size: 100% auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  min-height: 352rpx;
}
.container .topBox .designation {
  width: 404rpx;
  height: 82rpx;
  position: relative;
  margin: 0 auto;
}
.container .topBox .designation .name {
  width: 404rpx;
  height: 82rpx;
  color: #fff;
  text-align: center;
  line-height: 82rpx;
  position: absolute;
  font-size: 38rpx;
  left: 0;
  top: 0;
}
.container .topBox .starBanner {
  margin-top: 10rpx;
  width: 100%;
  height: 360rpx;
  position: relative;
}
.container .topBox .starBanner .bottomDiv {
  height: 120rpx;
  width: 100%;
  background: #9359f8;
  box-shadow: 20rpx 0 0 rgba(165, 237, 114, 0.35);
  opacity: 0.8;
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0;
  bottom: 0;
}
.container .topBox .starBanner .bottomDiv .starBox {
  width: 55%;
  color: #fff;
  position: relative;
}
.container .topBox .starBanner .bottomDiv .starBox .headBox {
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  z-index: 99;
  left: 30rpx;
  top: -30rpx;
}
.container .topBox .starBanner .bottomDiv .starBox .headBox .starImg {
  position: absolute;
  top: -18rpx;
  left: -18rpx;
  height: 134rpx;
  width: 138rpx;
  border-radius: 50%;
}
.container .topBox .starBanner .bottomDiv .starBox .headBox .starIcons {
  border-radius: 50%;
}
.container .topBox .starBanner .bottomDiv .starBox .headBox .firstIcon {
  width: 55rpx;
  height: 54rpx;
  position: absolute;
  left: -20rpx;
  top: -20rpx;
}
.container .topBox .starBanner .bottomDiv .starBox .starName {
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  position: absolute;
  left: 150rpx;
  top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .topBox .starBanner .bottomDiv .starBox .getXb {
  position: absolute;
  left: 150rpx;
  top: 70rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.container .topBox .starBanner .bottomDiv .starBox .getXb .xbIcon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.container .topBox .starBanner .bottomDiv .starBox .noNum {
  position: absolute;
  right: 0rpx;
  bottom: 20rpx;
  background: #f19ec2;
  border-radius: 20rpx;
  font-size: 26rpx;
  padding: 5rpx 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: white;
}
.container .topBox .starBanner .bottomDiv .fansBox {
  width: 45%;
  position: relative;
}
.container .topBox .starBanner .bottomDiv .fansBox .fansImg {
  height: 76rpx;
  width: 76rpx;
  position: absolute;
  right: 10rpx;
  top: -28rpx;
  border-radius: 50%;
}
.container .topBox .starBanner .bottomDiv .fansBox .bestFans {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: white;
  text-align: right;
  padding-right: 100rpx;
  margin-top: 15rpx;
}
.container .topBox .starBanner .bottomDiv .fansBox .intimacy {
  display: flex;
  align-items: center;
  text-align: right;
  flex-direction: row-reverse;
  height: 90rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
  color: #fff;
}
.container .topBox .starBanner .bottomDiv .fansBox .intimacy .loveicon {
  width: 22rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.container .switchBox {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.container .switchBox .switch {
  width: 50%;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: white;
}
.container .switchBox .switch ._span {
  margin-right: 20rpx;
}
.container .switchBox .rule {
  width: 50%;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: white;
}
.container .switchBox .rule ._img {
  height: 28rpx;
  width: 28rpx;
}
.container .switchBox .rule ._span {
  margin-right: 20rpx;
}